---
import "../styles/global.css";
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BregalFood - Aneka Sajian Lezat</title>
  </head>

  <body>
    <header class="navbar">
      <div class="nav-container">
        <div class="logo">
          <h1 class="brand">
            <span class="brand-bregal">Bregal</span><span class="brand-food"
              >Food</span
            >
          </h1>
        </div>

        <nav class="nav-menu">
          <a href="/" class="nav-link">Home</a>
          <a href="/Product" class="nav-link">Product</a>
          <a href="/Blogs" class="nav-link">Blogs</a>
        </nav>

        <div class="nav-actions">
          <form action="/Product" method="GET" class="search-box">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" name="search" placeholder="Cari makanan..." />
            <button type="submit" style="display: none;">Cari</button>
          </form>

          <a href="/Checkout" class="btn-cart">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="9" cy="21" r="1"></circle>
              <circle cx="20" cy="21" r="1"></circle>
              <path
                d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"
              ></path>
            </svg>
          </a>

          <a href="/Login" class="btn-login">Login</a>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  /* Style tetap sama seperti sebelumnya, hanya memastikan form terlihat bagus */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue",
      Arial, sans-serif;
    background-color: #f8f9fa;
  }

  .navbar {
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
  }

  .brand {
    font-size: 24px;
    font-weight: 800;
  }

  .brand-bregal {
    color: #2f5d3a;
  }
  .brand-food {
    color: #ff8f1f;
  }

  .nav-menu {
    display: flex;
    gap: 50px;
    align-items: center;
  }

  .nav-link {
    color: #1f2937;
    text-decoration: none;
    font-weight: 500;
    font-size: 15px;
    transition: color 0.3s ease;
    position: relative;
    padding: 8px 14px;
  }

  .nav-link:hover {
    color: #63a375;
  }

  .nav-actions {
    display: flex;
    gap: 15px;
    align-items: center;
  }

  /* Search Box sekarang adalah sebuah FORM */
  .search-box {
    display: flex;
    align-items: center;
    background: #f3f4f6;
    border-radius: 25px;
    padding: 8px 16px;
    gap: 8px;
    border: 1px solid transparent;
    transition: 0.3s;
  }

  .search-box:focus-within {
    background: white;
    border-color: #63a375;
    box-shadow: 0 0 0 3px rgba(99, 163, 117, 0.1);
  }

  .search-box input {
    border: none;
    background: transparent;
    outline: none;
    width: 180px;
  }

  .btn-cart {
    background: #f3f4f6;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    color: #4b6345;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: 0.2s;
  }

  .btn-cart:hover {
    transform: scale(1.1);
  }

  .btn-login {
    background: #63a375;
    color: white;
    text-decoration: none;
    padding: 10px 24px;
    border-radius: 25px;
    font-weight: 600;
  }
</style>
