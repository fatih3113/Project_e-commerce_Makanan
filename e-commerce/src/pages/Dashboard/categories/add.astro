---
import Dashboard from "../../../layouts/Dashboard.astro";
---

<Dashboard>
  <div class="add-page">
    <h1>Tambah Kategori</h1>

    <form id="addForm">
      <div class="form-group">
        <label>Category ID</label>
        <input type="text" id="category_id" placeholder="Contoh: BK" required />
      </div>

      <div class="form-group">
        <label>Nama Kategori</label>
        <input type="text" id="category" placeholder="Nama kategori" required />
      </div>

      <button type="submit" class="btn add">Simpan</button>
    </form>
  </div>
</Dashboard>

<script is:inline>
  const form = document.getElementById("addForm");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const data = {
      CATEGORY_ID: document.getElementById("category_id").value,
      CATEGORY: document.getElementById("category").value,
    };

    const res = await fetch("http://localhost:3000/product_categories", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(data),
    });

    if (res.ok) {
      alert("Kategori berhasil ditambahkan");
      window.location.href = "/Dashboard/categories";
    } else {
      alert("Gagal menambahkan kategori");
    }
  });
</script>

<style>
  .add-page {
    max-width: 420px;
    margin: 40px auto;
  }

  .add-page h1 {
    text-align: center;
    margin-bottom: 24px;
  }

  .add-page form {
    background: white;
    padding: 24px;
    border-radius: 10px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
  }

  .form-group {
    margin-bottom: 16px;
  }

  .form-group label {
    display: block;
    margin-bottom: 6px;
    font-weight: 500;
  }

  .form-group input {
    width: 100%;
    padding: 10px;
    border-radius: 6px;
    border: 1px solid #ccc;
  }

  .btn.add {
    width: 100%;
    padding: 10px;
    background: #22c55e;
    color: white;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
  }

  .btn.add:hover {
    opacity: 0.9;
  }
</style>
